<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vianneyribeiro.uplay">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LibraryActivity"
            android:label="My Library">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.vianneyribeiro.uplay.MainActivity" />
        </activity>
        <activity
            android:name=".PodcastActivity"
            android:label="Podcasts">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.vianneyribeiro.uplay.MainActivity" />
        </activity>
        <activity
            android:name=".PlaylistsActivity"
            android:label="Playlists">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.vianneyribeiro.uplay.MainActivity" />
        </activity>
        <activity
            android:name=".InternetRadioActivity"
            android:label="Internet Radio">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.vianneyribeiro.uplay.MainActivity" />
        </activity>
        <activity
            android:name=".PaymentActivity"
            android:label="Payment">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.vianneyribeiro.uplay.MainActivity" />
        </activity>
        <activity
            android:name=".AccountActivity"
            android:label="My Account and plan">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.vianneyribeiro.uplay.MainActivity" />
        </activity>
    </application>

</manifest>